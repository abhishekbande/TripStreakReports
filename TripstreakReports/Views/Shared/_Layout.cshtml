    <script>
        var table = $('#Amenities').DataTable();

        $(window).load(function() {
            $("#overlay").fadeOut("slow");
        });

        document.getElementById('fileInput').onchange = function() {
            document.getElementById("FileName").value = this.value.replace(/.*[\/\\]/, '');;
        };

        function ApplyPagingSortingSelectionToTable() {
            table = $('#Amenities').DataTable();
            $('#Amenities tbody').on('click', 'tr', function() {
                if ($(this).hasClass('bg')) {
                    $(this).removeClass('bg');
                } else {
                    //table.$('tr.bg').removeClass('bg');
                    $(this).addClass('bg');
                }
            });
        }

        function AddSnippner() {
            $("#OverlayAmenityTable").addClass("snipper1");
            $("#Amenities").addClass("fadeout");
        }

        function RemoveSpinner() {
            $("#Amenities").removeClass("fadeout");
            $("#OverlayAmenityTable").removeClass("snipper1");
        }

        $(function() {
            $("#Amenities").DataTable();
            $('.probeProbe').bootstrapSwitch();
            $('.probeProbe').on('switchChange.bootstrapSwitch', function(event, state) {
                AddSnippner();
                $("#AmenityTableWarpperDiv").load('@(Url.Action("SwitchEnvironment", "Dashboard", null, Request.Url.Scheme))?isProdEnvironment=' + state, function () {                  
                    ApplyPagingSortingSelectionToTable();
                    RemoveSpinner();
                });
            });        

            $('#clearAddNewAmenityForm').on('click', function () {
                $("#AddNewAmenityForm").data('bootstrapValidator').resetForm();
            });

            $('#clearEditAmenityForm').on('click', function () {              
                $("#EditAmenityForm").data('bootstrapValidator').resetForm();
            });          

            $('#ImportAmenitiesButton').on('click', function () {
                var selectedFile = document.getElementById("FileName").value;
                if (selectedFile != "") {
                    document.forms["importForm"].submit();
                } else {
                    document.getElementById("Messages").innerHTML = "<div class='alert alert-warning'><strong>Warning!!</strong>  Please select csv file to import.</div>";
                    $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                        $(".alert").alert('close');
                    });
                }
            });

        });


            $(document).ready(function () {

                $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                    $(".alert").alert('close');
                });

                ApplyPagingSortingSelectionToTable();

                $('#EditAmenity').click(function () {
                    var row = table.$('tr.bg');
                    if (row.length == 1) {

                        $('#EditAmenity').attr('data-target', '#EditPopup');

                        var oFormObject = document.forms['EditAmenityForm'];
                        oFormObject.elements["Amenity.ID"].value = row[0].cells[0].innerText;
                        oFormObject.elements["Amenity.Airline"].value = row[0].cells[1].innerText;
                        oFormObject.elements["Amenity.AirlineCode"].value = row[0].cells[2].innerText;
                        oFormObject.elements["Amenity.Manufacturer"].value = row[0].cells[3].innerText;
                        oFormObject.elements["Amenity.AircraftModel"].value = row[0].cells[4].innerText;
                        oFormObject.elements["Amenity.AircraftType"].value = row[0].cells[5].innerText;
                        oFormObject.elements["Amenity.IataTypeMapping"].value = row[0].cells[6].innerText;
                        oFormObject.elements["Amenity.Cabin"].value = row[0].cells[7].innerText;
                        oFormObject.elements["Amenity.VideoType"].value = row[0].cells[8].innerText;
                        oFormObject.elements["Amenity.InSeatPowerType"].value = row[0].cells[9].innerText;
                        oFormObject.elements["Amenity.WiFiAvailablilty"].value = row[0].cells[10].innerText;
                        oFormObject.elements["Amenity.SeatType"].value = row[0].cells[11].innerText;
                        oFormObject.elements["Amenity.AvailableAtArrivalAirport"].value = row[0].cells[13].innerText;
                        oFormObject.elements["Amenity.AvailableAtDepartureAirport"].value = row[0].cells[14].innerText;
                        oFormObject.elements["Amenity.AvailableInCountry"].value = row[0].cells[15].innerText;
                        oFormObject.elements["Amenity.BeingUpgraded"].value = row[0].cells[16].innerText;

                    } else if (row.length > 1) {
                        $('#EditAmenity').removeAttr('data-target', '#EditPopup');
                        document.getElementById("Messages").innerHTML = "<div class='alert alert-warning'><strong>Warning!!</strong>  Please select single amenity for edit.</div>";
                        $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                            $(".alert").alert('close');
                        });
                    } else {
                        $('#EditAmenity').removeAttr('data-target', '#EditPopup');
                        document.getElementById("Messages").innerHTML = "<div class='alert alert-warning'><strong>Warning!</strong>  Please select amenity for edit.</div>";
                        $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                            $(".alert").alert('close');
                        });
                    }
                });


                $('#DeleteAmenity').click(function () {
                    var row = table.$('tr.bg');
                    if (row.length > 0) {

                        $('#DeleteAmenity').attr('data-target', '#DeletePopup');

                        var amenityIds = "";

                        for (var i = 0; i < row.length; i++) {
                            if (i == 0) {
                                amenityIds = row[i].cells[0].innerText;
                            } else {
                                amenityIds = amenityIds + ", " + row[i].cells[0].innerText;
                            }
                        }
                        document.getElementById("AmenityIds").innerHTML = "Amenity Id's: <strong  style='color: red;'>" + amenityIds + "</strong>";
                        document.getElementById("AmenityIdsHiddenField").value = amenityIds;
                    } else {
                        $('#DeleteAmenity').removeAttr('data-target', '#DeletePopup');
                        document.getElementById("Messages").innerHTML = "<div class='alert alert-warning'><strong>Warning!</strong>  Please select amenity for delete.</div>";
                        $(".alert").fadeTo(2000, 500).slideUp(500, function () {
                            $(".alert").alert('close');
                        });
                    }
                });

                $('.AmenityForm')
                    .bootstrapValidator({
                        message: 'This value is not valid',
                        feedbackIcons: {
                            valid: 'glyphicon glyphicon-ok',
                            invalid: 'glyphicon glyphicon-remove',
                            validating: 'glyphicon glyphicon-refresh'
                        },
                        fields: {
                            'Amenity.AirlineCode': {
                                validators: {
                                    notEmpty: {
                                        message: 'The AirlineCode is required'
                                    }
                                }
                            },
                            'Amenity.Airline': {
                                validators: {
                                    notEmpty: {
                                        message: 'The Airline is required'
                                    }
                                }
                            },
                            'Amenity.Manufacture': {
                                validators: {
                                    notEmpty: {
                                        message: 'The Manufacture is required'
                                    }
                                }
                            },
                            'Amenity.AircraftType': {
                                validators: {
                                    notEmpty: {
                                        message: 'The AircraftType is required'
                                    }
                                }
                            },
                            'Amenity.IataTypeMapping': {
                                validators: {
                                    notEmpty: {
                                        message: 'The IataTypeMapping is required'
                                    }
                                }
                            },
                            'Amenity.Cabin': {
                                validators: {
                                    notEmpty: {
                                        message: 'The Cabin is required'
                                    }
                                }
                            },
                            'Amenity.VideoType': {
                                validators: {
                                    notEmpty: {
                                        message: 'The VideoType is required'
                                    }
                                }
                            },
                            'Amenity.InSeatPowerType': {
                                validators: {
                                    notEmpty: {
                                        message: 'The InSeatPowerType is required'
                                    }
                                }
                            },
                            'Amenity.WiFiAvailablilty': {
                                validators: {
                                    notEmpty: {
                                        message: 'The WiFiAvailablilty is required'
                                    }
                                }
                            },
                            'Amenity.SeatType': {
                                validators: {
                                    notEmpty: {
                                        message: 'The SeatType is required'
                                    }
                                }
                            }
                        }
                    });


            });
    </script>
